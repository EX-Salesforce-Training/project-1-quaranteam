<apex:Pagemessages id="msg"/>

<!-- To allow Salesforce to display error messages -->

<div class="head"><font size="40"><center>QUARANTEAM POSTAL</center></font></div>

<apex:form >

<p><b>QuaranTeamPostal Login</b><br /></p>

<apex:panelGrid columns="2" style="float:left;">

<p><b><font color="Black">UserName</font></b><br />

<apex:inputText required="true" id="username" value="{!username}"/></p>

<p><b><font color="Black">Password</font></b><br />

<apex:inputSecret id="password" value="{!password}"/></p>

</apex:panelGrid>

<p><apex:commandButton action="{!loginUser}" value="Login" id="Login"/>

</p>

</apex:form>

